<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{{  app_name }}</title>

        {% block stylesheets %}
            {% include "stylesheets.required.html.twig" %}
            {% include "stylesheets.admin.html.twig" %}
        {% endblock stylesheets %}
        {% include "javascripts.required.html.twig" %}

        <style type="text/css"></style>
    </head>

    <body>

    <div class="page-container">

        <!-- top navbar -->
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".sidebar-nav">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">{{  app_name }}</a>
                </div>
            </div>
        </div>

        <div class="container-fluid">
            <div class="row row-offcanvas row-offcanvas-left">

                <!-- sidebar -->
                <div class="col-xs-6 col-sm-3 col-lg-2 sidebar-offcanvas" id="sidebar" role="navigation">
                    <ul class="nav">
                        <li><a href="{{ path('caravane_admin_cms_page') }}">Site</a></li>
                        <li><a href="{{ path('caravane_admin_shop_product') }}">Shop</a>
                            <ul>
                                <li><a href="{{ path('caravane_admin_shop_product') }}">Products</a></li>
                                <li><a href="{{ path('caravane_admin_shop_category') }}">Categories</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>

                <!-- main area -->
                <div class="col-xs-12 col-sm-9 col-lg-10">
                    {%  block body %}
                    {%  endblock body %}
                </div><!-- /.col-xs-12 main -->
            </div><!--/.row-->
        </div><!--/.container-->
    </div><!--/.page-container-->
        <!-- /#wrapper -->

        {% block javascripts %}
        {% include "javascripts.app.html.twig" %}
        {% include "javascripts.admin.html.twig" %}
        {% endblock javascripts %}


    </body>
</html>