{% extends '::admin.html.twig' %}

{% block body -%}
    <h1>Page list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>Title</th>







                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in pages %}
            <tr>
                <td><a href="">{{ entity.id }}</a></td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.title }}</td>





                <td>
                <ul>
                    <li>
                        <a href="">show</a>
                    </li>
                    <li>
                        <a href="">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_cms_page_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
