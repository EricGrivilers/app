{% extends '::admin.html.twig' %}

{% block body -%}


    {% include 'CmfTreeBrowserBundle:Base:tree.html.twig' %}
    <script type="text/javascript">
        jQuery(function($) {
            $('#tree').jstree({
                request: {
                    load: function (nodePath) {
                        return {
                            url: 'aaa'.replace('__path__', nodePath)
                            {# todo: include routing defaults #}
                        };
                    }
                },
                actions: {
                    'edit': { url: { data: '?sonata_links.edit' }, label: 'Edit', icon: 'fa  fa-pencil' },
                    'delete': { url: { data: '?sonata_links.delete' }, label: 'Delete', icon: 'fa  fa-trash-o' }
                }
            });
        });
    </script>

    <div id="tree"></div>

    <h1>Category list</h1>

    <table class="records_list table table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_shop_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_shop_category_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_shop_category_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_shop_category_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
